// For format details, see https://aka.ms/devcontainer.json.
{
  "image": "daml-devcontainer",

  "runArgs": [
    "--gpus",
    "all"
  ],

  "mounts": [
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.gitconfig,target=/home/daml/.gitconfig,type=bind,consistency=cached",
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/home/daml/.ssh,type=bind,consistency=cached"
  ],

  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {}
  },

  "containerEnv": {
    "SHELL": "/bin/bash"
  },

  "containerUser": "daml",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-docker",
        "esbenp.prettier-vscode",
        "ms-python.python",
        "ms-python.black-formatter",
        "ms-python.flake8",
        "ms-python.isort"
      ]
    }
  },

  "postCreateCommand": "echo 'Installing daml...'; echo -n ${versions} | xargs -n1 -P0 sh -c '${PYENV_ROOT}/versions/$0.*/bin/poetry install --all-extras --with dev --with docs --quiet'"
}
