// For format details, see https://aka.ms/devcontainer.json.
{
  "image": "31z4/tox",

  "mounts": [
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.gitconfig,target=/home/tox/.gitconfig,type=bind,consistency=cached",
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/home/tox/.ssh,type=bind,consistency=cached"
  ],

  "features": {
    "ghcr.io/devcontainers/features/sshd:1": {}
  },

  "containerEnv": {
    "SHELL": "/bin/bash"
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-docker",
        "esbenp.prettier-vscode",
        "ms-python.python",
        "ms-python.black-formatter",
        "ms-python.flake8",
        "ms-python.isort"
      ]
    }
  },

  "updateContentCommand": "./create_dev_env.sh"
}
