// For format details, see https://aka.ms/devcontainer.json.
{
  "build": {
    "dockerfile": "../Dockerfile",
    "target": "devcontainer",
    "cacheFrom": "daml-cache"
  },

  "runArgs": [
    "--gpus",
    "all"
  ],

  "mounts": [
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.gitconfig,target=/home/daml/.gitconfig,type=bind,consistency=cached",
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/home/daml/.ssh,type=bind,consistency=cached"
  ],

  "features": {
    "ghcr.io/devcontainers/features/sshd:1": {},
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {}
  },

  "containerEnv": {
    "SHELL": "/bin/bash"
  },

  "containerUser": "daml",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-docker",
        "esbenp.prettier-vscode",
        "ms-python.python",
        "ms-python.black-formatter",
        "ms-python.flake8",
        "ms-python.isort"
      ]
    }
  },

  "postCreateCommand": "echo 'Installing daml...'; echo 3.8 3.9 3.10 3.11 | xargs -n1 -P0 sh -c '${PYENV_ROOT}/versions/daml-$0/bin/poetry install --only-root --all-extras --quiet'"
}
